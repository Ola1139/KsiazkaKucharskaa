{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title.skladniki'|trans}}
{% endblock %}

{% block body %}
    <h1>{{ 'title.skladniki'|trans}}</h1>
    {{ form_start(form, { method: 'POST', action: url('skladniki_new', {'idPrzepisu':idPrzepisu}) }) }}
    {{ form_widget(form) }}

    <div class="form-group row float-sm-right">
        <input type="submit" value="{{ 'action.save'|trans }}" class="btn btn-primary" />
    </div>

    {{ form_end(form) }}
{% endblock %}