{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title.dane_list'|trans }}
{% endblock %}

{% block body %}
    <h1>Wyniki</h1>
    {% if pagination is defined and pagination|length %}

        <div class="navigation text-center">
            {{ knp_pagination_render(pagination) }}
        </div>

        <table class="table table-striped">
            <thead>
            <tr>
                <th>Tytuł</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            {% for dane in pagination %}
                <tr>
                    <td>{{ dane.tytul }}</td>

                    <td>
                        <a href="{{ url('przepis_view', {id: dane.id}) }}" title="{{ 'see_more'|trans }}">
                           Zobacz więcej
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <div class="navigation text-center">
            {{ knp_pagination_render(pagination) }}
        </div>

    {% else %}
        <p>
            Nie znaleziono przepisów
        </p>
    {% endif %}

{% endblock %}