{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title.przepis_view'|trans({'%id%': przepis.id|default('')}) }}
{% endblock %}

{% block body %}
    <h1>{{ 'title.przepis_view'|trans({'%id%': przepis.id|default('')}) }}</h1>
    {% if przepis is defined and przepis|length %}
        <dl class="dl-horizontal">

            <dt>{{ 'label.contents'|trans }}</dt>
            <dd>{{ przepis.tresc }}</dd>
            <dt>{{ 'label.author' }}</dt>
            <dd>{{ autor }}</dd>

        </dl>

        <a href="{{ url('przepis_delete', {id: przepis.id}) }}" title="{{ 'delete'|trans }}">
            {{ 'delete'|trans }} </a>
        <a href="{{ url('przepis_edit', {id: przepis.id}) }}" title="{{ 'edit'|trans }}">
            {{ 'edit'|trans }} </a>

    {% else %}
        <p>
            {{ 'message.item_not_found'|trans }}
        </p>
    {% endif %}
{% endblock %}