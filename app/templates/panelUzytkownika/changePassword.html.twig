{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title.change_password'|trans}}
{% endblock %}

{% block body %}
    <h1>{{ 'title.change_password'|trans}}</h1>
    {{ form_start(form, { method: 'PUT', action: url('change_password') }) }}
    {{ form_widget(form) }}

    <div class="form-group row float-sm-right">
        <input type="submit" value="{{ 'action.change'|trans }}" class="btn btn-primary" />
    </div>

    {{ form_end(form) }}
{% endblock %}